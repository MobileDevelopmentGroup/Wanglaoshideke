<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gssflyaway.mobilecourse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ReservationDetailActivity"
            android:label="@string/reservation_detail" />
        <activity
            android:name=".activity.ReservationActivity"
            android:label="@string/reservation" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/action_sign_in"
            />
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/action_sign_up">
        </activity>
    </application>

</manifest>
